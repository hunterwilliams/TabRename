{
  "manifest_version": 2,

  "name": "TabStyles",
  "description": "Rename & Style Tabs",
  "background": { "scripts": ["background.js"] },
  "version": "0.1",

  "content_scripts": [
    {
      "matches": ["http://*/*","https://*/*"],
      "js": ["rename.js"]
    }
  ],
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "http://*/*",
    "https://*/*"
  ],

  "icons": { "16": "icon16x16.png",
           "48": "icon48x48.png",
          "128": "icon128x128.png" },

  "offline_enabled": true,
  
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
}